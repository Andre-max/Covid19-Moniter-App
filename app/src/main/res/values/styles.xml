<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/dark_black</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppTheme.BlackTextColor">
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppTheme.WhiteTextColor">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="plain_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>


    <style name="display_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:layout_marginLeft">@dimen/_6sdp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="each_plain_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="each_display_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="all_plain_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="all_display_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
    </style>

</resources>